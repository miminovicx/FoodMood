doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Find recipe
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    style.
      form {
        width: 600px;
        margin: 0 auto;
      }
      h1 {
        text-align: center;
        margin-top: 50px;
      }
  body
    h1 FoodMood
    form(action='/home', method='POST')
      .form-group
        label(for='ingredients') Ingredients 
        input.form-control(type='text', name='ingredients', placeholder='E.g. chicken, broccoli', required='')
      .form-group
        label(for='cuisine') Cuisine 
        input.form-control(type='text', name='cuisine', placeholder='E.g. Italian, Mexican')
      .form-group
        label(for='excludeCuisine') Exclude Cuisine 
        input.form-control(type='text', name='excludeCuisine', placeholder='E.g. Chinese, Indian')
      .form-group
        label(for='diet') Diet 
        input.form-control(type='text', name='diet', placeholder='E.g. Vegetarian, Vegan')
      .form-group
        label(for='intolerances') Intolerances 
        input.form-control(type='text', name='intolerances', placeholder='E.g. Gluten, Dairy')
      .form-group
        label(for='excludeIngredients') Exclude Ingredients 
        input.form-control(type='text', name='excludeIngredients', placeholder='E.g. Onion, Garlic')
      .form-group
        label(for='maxReadyTime') Maximum Ready Time (minutes)
        input.form-control(type='number', name='maxReadyTime', placeholder='E.g. 30')
      .form-group
        label(for='number') Number of Recipes
        input.form-control(type='number', name='number', placeholder='E.g. 10')
      button.btn.btn-primary(type='submit') Search

extends ./templates/layout


block content
  head
    title
      | FoodMood
    style.
      body {
        height: 100vh;
        font-family: Arial, sans-serif;
        background-image: url('../images/foodBack_Small.png');
      }
      form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 10px;
        background-color: #ffede0;
        border-radius: 5px;
        box-shadow: 0px 0px 20px rgba(0,0,0,0.1);
        margin-top: 50px;
        margin-bottom: 50px;
      }
      h1 {
        margin-bottom: 50px;
        color: #FF0000; // rouge
      }
      label {
        font-weight: bold;
        color: #333333;
      }
      input {
        margin-bottom: 20px;
        padding: 10px;
        border-radius: 5px;
        border: none;
        background-color: #f7f7f7;
        box-shadow: 0px 0px 5px rgba(0,0,0,0.1);
        color: #333333;
        font-size: 16px;
      }
      button {
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        background-color: #FFA500;
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
      }
      button:hover {
        background-color: #FF8C00;
      }
      .links {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .links a {
        color: #FF0000; // rouge
        text-decoration: none;
        margin-left: 10px;
      }
      .links a:hover {
        text-decoration: underline;
      }
  body
    form(action='/home', method='POST')
      h1 Wanna cook ?
      .form-group
        label(for='ingredients') Ingredients 
        input.form-control(type='text', name='ingredients', placeholder='E.g. chicken, broccoli', required='')
      .form-group
        label(for='cuisine') Cuisine 
        input.form-control(type='text', name='cuisine', placeholder='E.g. Italian, Mexican')
      .form-group
        label(for='excludeCuisine') Exclude Cuisine 
        input.form-control(type='text', name='excludeCuisine', placeholder='E.g. Chinese, Indian')
      .form-group
        label(for='diet') Diet 
        input.form-control(type='text', name='diet', placeholder='E.g. Vegetarian, Vegan')
      .form-group
        label(for='intolerances') Intolerances 
        input.form-control(type='text', name='intolerances', placeholder='E.g. Gluten, Dairy')
      .form-group
        label(for='excludeIngredients') Exclude Ingredients 
        input.form-control(type='text', name='excludeIngredients', placeholder='E.g. Onion, Garlic')
      .form-group
        label(for='maxReadyTime') Maximum Ready Time (minutes)
        input.form-control(type='number', name='maxReadyTime', placeholder='E.g. 30')
      .form-group
        label(for='number') Number of Recipes
        input.form-control(type='number', name='number', placeholder='E.g. 10')
      .form-group.center
        button(type='submit') Search 